{
  "name": "nestjs-bff-learning",
  "version": "0.0.1",
  "description": "NestJS + BFF学習プロジェクト",
  "private": true,
  "scripts": {
    "start:task": "bun run --cwd services/task-service start:dev",
    "start:user": "bun run --cwd services/user-service start:dev",
    "start:gateway": "bun run --cwd services/api-gateway start:dev",
    "test:task": "bun run --cwd services/task-service test",
    "test:user": "bun run --cwd services/user-service test",
    "test:gateway": "bun run --cwd services/api-gateway test",
    "test:task:e2e": "bun run --cwd services/task-service test:e2e",
    "test:user:e2e": "bun run --cwd services/user-service test:e2e",
    "test:gateway:e2e": "bun run --cwd services/api-gateway test:e2e",
    "start:angular": "bun run --cwd frontend/angular-app start",
    "build:angular": "bun run --cwd frontend/angular-app build",
    "lint": "pnpm run -r --if-present lint",
    "format": "pnpm run -r --if-present format",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.28.2",
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
