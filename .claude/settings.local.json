{
  "env": {
    "CLAUDE_CODE_TASK_LIST_ID": "nestjs-bff"
  },
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(docker *)",
      "Bash(npm *)",
      "Bash(gh *)",
      "Bash(curl *)",
      "Bash(cat *)",
      "Bash(powershell *)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:github.com)",
      "WebSearch",
      "Skill(session-start)",
      "Skill(session-end)",
      "Bash(dir *)",
      "Bash(claude plugin:*)",
      "Bash(gh issue create:*)",
      "Bash(echo:*)",
      "WebFetch(domain:blog.nextscape.net)",
      "WebFetch(domain:docs.anthropic.com)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "playwright"
  ],
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/dist/index.js userPromptSubmit"
          }
        ]
      }
    ]
  },
  "plansDirectory": ".claude/plans"
}
