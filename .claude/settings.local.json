{
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(docker *)",
      "Bash(npm *)",
      "Bash(gh *)",
      "Bash(curl *)",
      "Bash(cat *)",
      "Bash(powershell *)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:github.com)",
      "WebSearch",
      "Skill(session-start)",
      "Skill(session-end)",
      "Bash(dir *)",
      "Bash(claude plugin:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "playwright"
  ],
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/dist/index.js userPromptSubmit"
          }
        ]
      }
    ]
  }
}
